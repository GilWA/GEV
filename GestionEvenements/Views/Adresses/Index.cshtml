@model IEnumerable<Modele.Adresse>

@{
    ViewData["Title"] = "Adresses";
}

<h1>Adresse</h1>

<p>
    <a asp-action="Create">Nouvelle adresse</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ville)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pays)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ville)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pays)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AdresseId">Fiche</a> |
                    <a asp-action="Edit" asp-route-id="@item.AdresseId">Modifier</a> |
                    <a asp-action="Delete" asp-route-id="@item.AdresseId">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
