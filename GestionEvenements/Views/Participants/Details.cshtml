@model Modele.Participant

@{
    ViewData["Title"] = "Details";
}

<h1>Participant</h1>

<div>
    <h4>Fiche</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Civilite)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Civilite)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnneeNaissance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnneeNaissance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnneeDeces)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnneeDeces)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LieuNaissance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LieuNaissance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Activites)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Activites)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ParticipantId">Modifier</a> |
    <a asp-action="Index">Liste</a>
</div>

<hr />
<h4 style="margin-top:20px">Participations</h4>
<p>
    <a asp-controller="Evenements" asp-action="Inscription" asp-route-id="@Model.ParticipantId">Nouvelle participation</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Type d'événement
        </th>
        <th>
           Année
        </th>

        <th>
            Titre
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Participations)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Evenement.TypeEvenement.Libelle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evenement.Annee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evenement.Titre)
            </td>
            <td>
                <a asp-controller="Evenements" asp-action="Details" asp-route-id="@item.EvenementId">Fiche</a>
            </td>
        </tr>
    }
    </tbody>
</table>

