@model Modele.Interet

@{
    ViewData["Title"] = "Delete";
}

<h1>Confirmation de suppression de l'intérêt</h1>
<h3>Etes-vous sûr ?</h3>
<div>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EvenementId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TitreEvenement)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Commentaires)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Commentaires)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="InteretId" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Liste</a>
    </form>
</div>
